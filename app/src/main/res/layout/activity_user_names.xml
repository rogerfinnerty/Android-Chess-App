<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user_names">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Player 1"
            android:textSize="24sp" />
        <EditText
            android:id="@+id/player_one_name"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:text="Enter player 1 name:"
            android:inputType="text" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Player 2"
            android:textSize="24sp" />
        <EditText
            android:id="@+id/player_two_name"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:text="Enter player 2 name:"
            android:inputType="text" />

        <Button
            android:id="@+id/start_game"
            android:layout_width="match_parent"
            android:layout_height="87dp"
            android:onClick="goToBoard"
            android:text="Start Game"/>

        <include layout="@layout/content_user_names" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>